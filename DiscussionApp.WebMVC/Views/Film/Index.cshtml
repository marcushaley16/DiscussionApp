@model IEnumerable<DiscussionApp.Models.FilmListItem>

@{
    ViewBag.Title = "Index";
}

<div id="carousel-wrapper">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators - the dots at the bottom of each slide -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
            <li data-target="#carousel" data-slide-to="3"></li>
            <li data-target="#carousel" data-slide-to="4"></li>
            <li data-target="#carousel" data-slide-to="5"></li>
            <li data-target="#carousel" data-slide-to="6"></li>
            <li data-target="#carousel" data-slide-to="7"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Assets/thegodfather1.jpg" alt="The Godfather">
                <div class="carousel-caption">
                    <h2>The Godfather (1972)</h2>
                    <h4>Directed by Francis Ford Coppola</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/onceuponatimeinhollywood.jpg" alt="Once Upon a Time in Hollywood">
                <div class="carousel-caption">
                    <h2>Once Upon a Time in Hollywood (2019)</h2>
                    <h4>Directed by Quentin Tarantino</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/bladerunner2049_vegas.jpg" alt="Blade Runner 2049">
                <div class="carousel-caption">
                    <h2>Blade Runner 2049 (2017)</h2>
                    <h4>Directed by Denis Villeneuve</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/pulpfiction_coffee.jpg" alt="Pulp Fiction">
                <div class="carousel-caption">
                    <h2>Pulp Fiction (1994)</h2>
                    <h4>Directed by Quentin Tarantino</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/thedarkknight_joker.jpg" alt="The Dark Knight">
                <div class="carousel-caption">
                    <h2>The Dark Knight (2008)</h2>
                    <h4>Directed by Christopher Nolan</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/backtothefuture_clocktower.jpg" alt="Back to the Future">
                <div class="carousel-caption">
                    <h2>Back to the Future (1985)</h2>
                    <h4>Directed by Robert Zemeckis</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/thebiglebowski.jpg" alt="The Big Lebowski">
                <div class="carousel-caption">
                    <h2>The Big Lebowski (1998)</h2>
                    <h4>Directed by Joel & Ethan Coen</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/taxidriver.jpg" alt="Taxi Driver">
                <div class="carousel-caption">
                    <h2>Taxi Driver (1976)</h2>
                    <h4>Directed by Martin Scorsese</h4>
                    <br />
                </div>
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h2 id="film-index-h2">Films</h2>

<p id="film-index-create">
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr class="film-table-row">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="film-table-row">
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.FilmId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre1) /
                @Html.DisplayFor(modelItem => item.Genre2)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FilmId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FilmId })
            </td>
        </tr>
    }

</table>
