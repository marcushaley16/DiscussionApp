@model DiscussionApp.Models.TVShowDetail

@{
    ViewBag.Title = ViewBag.TVTitle;
}

<h2 id="details-h2">Details</h2>

<div id="details-controls" style="clear: both;">
    <p class="details-nav">
        @Html.ActionLink("Back to Shows", "Index")
    </p>
    <p class="details-edit">
        @Html.ActionLink("Edit Show", "Edit", new { id = Model.TelevisionId })
    </p>
</div>
<br />
<div>
    <hr />
    <div class="table-tv-details">
        <div class="div-tv-details">
            <h2 id="media-title">@Html.DisplayFor(model => model.Title)</h2>
            <p>
                @Html.DisplayFor(model => model.Year) |
                @Html.DisplayFor(model => model.Network) |
                @Html.DisplayFor(model => model.Rating) |
                @Html.DisplayFor(model => model.Runtime) mins |
                @Html.DisplayFor(model => model.Genre1) /
                @Html.DisplayFor(model => model.Genre2)
            </p>
            <br />
            <p>
                <b>Created By</b>
            </p>
            <p>
                @Html.DisplayFor(model => model.Creator)
            </p>
            <br />
            <p>
                <b>Stars</b>
            </p>
            <p>
                @Html.DisplayFor(model => model.Stars)
            </p>
            <br />
            <p><b>Synopsis</b></p>
            <p>
                @Html.DisplayFor(model => model.Synopsis)
            </p>
            <br />
        </div>
    </div>
</div>

