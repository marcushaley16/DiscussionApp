@model IEnumerable<DiscussionApp.Models.TVShowListItem>

@{
    ViewBag.Title = "Index";
}

<div id="carousel-wrapper">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators - the dots at the bottom of each slide -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
            <li data-target="#carousel" data-slide-to="3"></li>
            <li data-target="#carousel" data-slide-to="4"></li>
            <li data-target="#carousel" data-slide-to="5"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Assets/breakingbad1.jpg" alt="Breaking Bad">
                <div class="carousel-caption">
                    <h2>Breaking Bad</h2>
                    <h4>Created by Vince Gilligan</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/gameofthrones_botb.jpg" alt="Game of Thrones">
                <div class="carousel-caption">
                    <h2>Game of Thrones</h2>
                    <h4>Created by David Benioff, D.B. Weiss</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/westworld_s1.jpg" alt="Westworld">
                <div class="carousel-caption">
                    <h2>Westworld</h2>
                    <h4>Created by Jonathan Nolan and Lisa Joy</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/mrrobot_alley.jpg" alt="Mr. Robot">
                <div class="carousel-caption">
                    <h2>Mr. Robot</h2>
                    <h4>Created by Sam Esmail</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/friends_unagi.jpg" alt="Friends">
                <div class="carousel-caption">
                    <h2>Friends</h2>
                    <h4>Created by David Crane and Marta Kauffman</h4>
                    <br />
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Assets/strangerthings_ghostbusters.jpg" alt="Stranger Things">
                <div class="carousel-caption">
                    <h2>Stranger Things</h2>
                    <h4>Created by Matt & Ross Duffer</h4>
                    <br />
                </div>
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h2 id="tv-index-h2">Television</h2>

<p id="tv-index-create">
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr class="tv-table-row">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Network)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="tv-table-row">
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.TelevisionId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre1) /
                @Html.DisplayFor(modelItem => item.Genre2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Network)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TelevisionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TelevisionId })
            </td>
        </tr>
    }

</table>
