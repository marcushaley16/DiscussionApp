                @Html.DisplayFor(modelItem => item.PostCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUTC.DateTime) by @Html.DisplayFor(modelItem => item.CreatorUsername)
            </td>
