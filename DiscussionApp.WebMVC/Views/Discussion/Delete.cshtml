@model DiscussionApp.Models.DiscussionDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Discussion</h2>

<h4>Are you sure you want to delete this discussion?</h4>
<h4>Warning: This will also delete all posts in the discussion</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiscussionTitle)
        </dd>

        <dt>
            Creator:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorUsername)
        </dd>

        <dt>
            Created:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUTC)
        </dd>

        <dt>
            Posts:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostCount)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Discussion Board", "Index")
        </div>
    }
</div>
