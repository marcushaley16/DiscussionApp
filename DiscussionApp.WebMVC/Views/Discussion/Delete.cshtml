@model DiscussionApp.Models.DiscussionDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Discussion</h2>

<h3>Are you sure you want to delete this discussion?</h3>
<h3>WARNING: This will also delete all posts in the discussion</h3>
<div>
    <h4>Discussion Details:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DiscussionTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiscussionTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatorUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedUTC.DateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUTC.DateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostCount)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Discussion Board", "Index")
        </div>
    }
</div>
